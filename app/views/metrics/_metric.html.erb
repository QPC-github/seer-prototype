<div id="<%= dom_id metric %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= metric.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Value:</strong>
    <%= metric.value %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Kind:</strong>
    <%= metric.kind.titleize %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Project:</strong>
    <%= metric.project.name %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this metric", metric, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this metric', edit_metric_path(metric), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
