<table class="my-10">
  <caption>Summary of estimates</caption>
  <tr>
    <th class="px-16"><!-- deliberately empty for layout --></th>
    <th class="px-12 bg-slate-200 border-x">Magnitude</th>
    <th class="px-12 bg-slate-200 border-x">Frequency</th>
    <th class="px-12 bg-slate-200 border-x">Risk</th>
  </tr>
  <tr>
    <th class="bg-slate-200 border-y">Minimum</th>
    <td class="text-center border"><%= project.min_of_min_magnitudes&.round(3) || "-" %>
    <td class="text-center border"><%= project.min_of_min_frequencies&.round(3) || "-" %>
    <td class="text-center border"><%= project.min_of_min_risks&.round(3) || "-" %>
  </tr>
  <tr>
    <th class="bg-slate-200 border-y">Average likely</th>
    <td class="text-center border"><%= project.average_of_likely_magnitudes&.round(3) || "-" %>
    <td class="text-center border"><%= project.average_of_likely_frequencies&.round(3) || "-" %>
    <td class="text-center border"><%= project.average_of_risk_modes&.round(3) || "-" %>
  </tr>
  <tr>
    <th class="bg-slate-200 border-y">Maximum</th>
    <td class="text-center border"><%= project.max_of_max_magnitudes&.round(3) || "-" %>
    <td class="text-center border"><%= project.max_of_max_frequencies&.round(3) || "-" %>
    <td class="text-center border"><%= project.max_of_max_risks&.round(3) || "-" %>
  </tr>
</table>