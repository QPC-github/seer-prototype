<div id="<%= dom_id project %>" class="my-4">
  <h1 class="text-4xl text-center py-10"><%= project.name %></h1>

  <table>
    <caption>Summary of estimates</caption>
    <tr>
      <th class="px-16"><!-- deliberately empty for layout --></th>
      <th class="px-12 bg-slate-200 border-x">Magnitude</th>
      <th class="px-12 bg-slate-200 border-x">Frequency</th>
    </tr>
    <tr>
      <th class="bg-slate-200 border-y">Minimum</th>
      <td class="text-center border"><%= project.min_of_min_magnitudes || "-" %>
      <td class="text-center border"><%= project.min_of_min_frequencies || "-" %>
    </tr>
    <tr>
      <th class="bg-slate-200 border-y">Avg likely</th>
      <td class="text-center border"><%= project.average_of_likely_magnitudes || "-" %>
      <td class="text-center border"><%= project.average_of_likely_frequencies || "-" %>
    </tr>
    <tr>
      <th class="bg-slate-200 border-y">Maximum</th>
      <td class="text-center border"><%= project.max_of_max_magnitudes || "-" %>
      <td class="text-center border"><%= project.max_of_max_frequencies || "-" %>
    </tr>
  </table>
</div>
