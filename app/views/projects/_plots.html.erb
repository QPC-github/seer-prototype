<div id="estimate-plots" class="my-10 grid grid-cols-3">
  <div id="risk-possibilities-plot">
  <%=
    Vega.lite
    .height(120)
    .layer([
      {
        data: {
          values: project.risk_possibilities
        },
        mark: {
          type: "area",
          tooltip: true,
          interpolate: "step-after"
        },
        encoding: {
          x: {
            field: "risk",
            type: "quantitative",
            title: "Risk",
            scale: {
              domainMin: 0,
            },
            axis: {
              grid: false
            }
          },
          y: {
            field: "count",
            type: "quantitative",
            title: "Count",
            axis: {
              tickMinStep: 1
            },
          }
        }
      },
      {
        data: {
          values: project.modal_risk_densities
        },
        mark: {
          type: "rule",
          tooltip: true,
          color: "red",
          width: {
            band: 0.1
          }
        },
        encoding: {
          x: {
            field: "risk",
            type: "quantitative"
          }
        }
      }
    ])
  %>
  </div>
  <div id="magnitude-plot" class="mx-2">
  <%=
    Vega.lite
    .data({values: project.estimates})
    .height(120)
    .layer([
      {
        mark: {
          type: "errorbar",
          tooltip: true,
          ticks: "black"
        },
        encoding: {
          x: {
            field: "min_magnitude",
            type: "quantitative",
            title: "Magnitude",

          },
          x2: {
            field: "max_magnitude",
          },
          y: {
            field: "expert_id",
            type: "nominal",
            title: "Expert",
          }
        }
      },
      {
        mark: {
          type: "point",
          tooltip: true,
          filled: true,
          size: 60,
          color: "red"
        },
        encoding: {
          x: {
            field: "likely_magnitude",
            type: "quantitative",

          },
          y: {
            field: "expert_id",
            type: "nominal"
          }
        }
      }
    ])
  %>
  </div>
  <div id="frequency-plot" class="mx-2">
  <%=
    Vega.lite
    .data({values: project.estimates})
    .height(120)
    .layer([
      {
        mark: {
          type: "errorbar",
          tooltip: true,
          ticks: "black"
        },
        encoding: {
          x: {
            field: "min_frequency",
            type: "quantitative",
            title: "Frequency",

          },
          x2: {
            field: "max_frequency",
          },
          y: {
            field: "expert_id",
            type: "nominal",
            title: "Expert",
          }
        }
      },
      {
        mark: {
          type: "point",
          tooltip: true,
          filled: true,
          size: 60,
          color: "red"
        },
        encoding: {
          x: {
            field: "likely_frequency",
            type: "quantitative",

          },
          y: {
            field: "expert_id",
            type: "nominal"
          }
        }
      }
    ])
  %>
  </div>
</div>